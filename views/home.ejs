<!DOCTYPE html>
<html lang="en">

<head>
    <title>Gappy Food Reviews</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Brainomix assignment - shopping list.">
    <meta name="keyords" content="brainomix,shopping,list">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link type="text/css" href="./mystyle.css" rel="stylesheet" >
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Shippori+Mincho+B1:wght@600&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script>
      // document.addEventListener('DOMContentLoaded',() => {

      // });

      function getRatingWidget(rating,elemId) {
        let ratingArea = document.querySelector(elemId);
        let filledStar = `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
              </svg>`;
        let hollowStar = `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
              </svg>`;
        let starWidget = document.createElement("SPAN");      
        for(let i=0;i<5;i++) {
          if(i+1 <= rating) {
            starWidget.innerHTML = starWidget.innerHTML.concat(filledStar);
          } else {
            starWidget.innerHTML = starWidget.innerHTML.concat(hollowStar);
          }
        }
        ratingArea.append(starWidget);
      }
    </script>
</head>


<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container-fluid">
            <a class="navbar-brand" href="#">Warehouse</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                {% if user.is_authenticated %}
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/shop/view-items">Items</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/shop/add-item">Add Items</a>
                    </li>
                    <li class="nav-item dropdown">
                      <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Orders
                      </a>
                      <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="/orders/vieworders/">Outstanding Orders</a></li>
                        <li><a class="dropdown-item" href="/orders/completedorders/">Completed Ordersn</a></li>
                      </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/accounts/logout">Logout</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="/accounts/login">Login</a>
                    </li>
                {% endif %}
              </ul>
            </div>
          </div>
        </nav>
    </header>
    <main>
        <!-- <div class="container-fluid"> -->
          <div class="row">
            <div class="col-md-4">
              <div class="logo">
                <img src="./img/gappylogo_2.png" alt="Gappy Logo" />
              </div>
            </div>
            <div class="col-md-8">
              <div class="hero">
                <h1>Gappy Food Reviews</h1>
                <h1>By Lee Allen</h1>
              </div>
            </div>
          </div>
          <section>
            <div class="row">
              <div class="col-md-4">
                <img src="./img/lee_love_4.png" alt="picture of Lee" />
              </div>
              <div class="col-md-8">
                <div> <!-- class="oyster-img"> -->
                  <!--  -->
                  <h2>About Me</h2>
                  <p>I love food!</p>
                  <p>When I was a kid I was really fussy with food, but that all changed the day I went on a boating trip with my uncle Frank and his late wife Patricia.</p>
                  <p>We went fishing for oysters. My uncle Frank caught one and then took out his pocket knife to open it and handed it to me. 
                    I sucked out all the contents in one go and from that point onwards I was completely addicted!</p>
                    <img src="./img/chef-1417239_1280.png" alt="picture of oysters" />
                </div>  
              </div>
            </div>
              <% errors.forEach(function(message) { %>
                <div class="alert alert-danger small"><%= message %></div>
              <% }) %>
          </section>
          <section>
            <h2>Latest</h2>
            <h3><%= latest.title %></h3>
            <p>Dined at <strong><%= latest.restaurant %></strong> on <i><%= latest.dateAdded.getDate() %>/<%= latest.dateAdded.getMonth() + 1 %>/<%= latest.dateAdded.getFullYear() %></i>
            <div id="ratingarea" class="rating-component"><script>getRatingWidget(<%= latest.rating %>,'#ratingarea');</script></div>
            </p>
            <div class="container-fluid">
              <div class="row">
                <% latest.picArray.forEach((path) => { %>
                  <div class="col-md text-center">
                    <img class="restaurant-image" src="<%= path.path %>" alt="<%= latest.restaurant %> meal">
                  </div>
                <% }) %>
              </div>
            </div>
            <%- filterUserHTML(latest.review) %>
          </section>
          <section>
            <h2>Reviews</h2>
            <% reviews.forEach((review) => { %>
              <div class="card mb-3">
                <div class="row g-0">
                  <div class="col-md-4">
                    <img src="<%= review.picArray[0].path %>" class="img-fluid rounded-start" alt="...">
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title"><%= review.title %></h5>
                      <div id="rating-<%= review._id %>" class="rating-component" ><script>getRatingWidget(<%= review.rating %>,'#rating-<%= review._id %>');</script></div>
                      <h6 class="card-title"><strong><%= review.restaurant %></strong> on <i><%= review.dateAdded.getDate() %>/<%= review.dateAdded.getMonth() + 1 %>/<%= review.dateAdded.getFullYear() %></i></h6>
                      <p class="card-text"><%= extractFirstParagraph(review.review) %></p>
                      <p class="card-text"><small class="text-muted"><a href="#">Read more...</a></small></p>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          </section>
        <!-- </div> -->
    </main>
    <footer>
        <div class="row">
            <div class="col-md-12 flex-d justify-content-center">
                <p>By Lee Allen</p>
            </div>
        </div>
    </footer>
</body>

</html>